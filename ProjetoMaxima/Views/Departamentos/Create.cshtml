@model ProjetoMaxima.Models.Departamento

@{
    ViewData["Title"] = "Criar Departamento";
}

<h2>@ViewData["Title"]</h2>
<h1></h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Codigo" class="control-label"></label>
        <input asp-for="Codigo" class="form-control mb-3" />
        <span asp-validation-for="Codigo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao" class="control-label"></label>
        <input asp-for="Descricao" class="form-control mb-3" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <div class="row">
            <div class="col">
                <input type="submit" value="Criar Departamento" class="btn btn-primary btn-block" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-secondary btn-block">Voltar</a>
            </div>
        </div>
    </div>

</form>
