@model IEnumerable<ProjetoMaxima.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Criar novo departamento</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Descrição
            </th>
            <th>
                Ações
            </th>


            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var departamento in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => departamento.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => departamento.Descricao)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@departamento.Codigo">Editar</a>
                    <a asp-action="Details" asp-route-id="@departamento.Codigo">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@departamento.Codigo">Apagar</a>
                </td>
            </tr>

        }
    </tbody>
</table>
