@model ProjetoMaxima.Models.ViewModel.ProdutosFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h5>Editar Cadastro do Produto</h5>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Produto.ID" class="control-label"></label>
                <input asp-for="Produto.ID" class="form-control mb-3" readonly />
                <span asp-validation-for="Produto.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Codigo" class="control-label"></label>
                <input asp-for="Produto.Codigo" class="form-control mb-3" />
                <span asp-validation-for="Produto.Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Descricao" class="control-label"></label>
                <input asp-for="Produto.Descricao" class="form-control mb-3" />
                <span asp-validation-for="Produto.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Preco" class="control-label"></label>
                <input asp-for="Produto.Preco" class="form-control mb-3"/>
                <span asp-validation-for="Produto.Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Status" class="control-label"></label>
                <select asp-for="Produto.Status" class="form-control mb-3">
                    <option value="True">Sim</option>
                    <option value="False">Não</option>
                </select>
                <span asp-validation-for="Produto.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Inutilizavel" class="control-label"></label>
                <select asp-for="Produto.Inutilizavel" class="form-control mb-3">
                    <option value="True">Sim</option>
                    <option value="False" selected>Não</option>
                </select>
                <span asp-validation-for="Produto.Inutilizavel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.DepartamentoCodigo" class="control-label"></label>
                <select asp-for="Produto.DepartamentoCodigo" asp-items="@(new SelectList(Model.Departaments, "Codigo","Descricao"))" class="form-control mb-3"></select>
            </div>
            <div class="form-group mb-3">
                <div class="row">
                    <div class="col">
                        <input type="submit" value="Salvar Cadastro" class="btn btn-primary btn-block" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-secondary btn-block">Voltar</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
