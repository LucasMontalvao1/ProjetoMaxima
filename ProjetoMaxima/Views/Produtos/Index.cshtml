@model IEnumerable<ProjetoMaxima.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}


<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo produto</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartamentoCodigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inutilizavel)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartamentoCodigo)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Status)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.Inutilizavel)
                </th>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.ID">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.ID">Apagar</a>
                </td>
            </tr>
        }
    </tbody>

</table>

